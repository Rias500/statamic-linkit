{
    "name": "rias/statamic-link-it",
    "type": "statamic-addon",
    "description": "Link to anything and everything!",
    "autoload": {
        "psr-4": {
            "Rias\\LinkIt\\": "src"
        }
    },
    "require":  {
        "pixelfear/composer-dist-plugin": "^0.1.0"
    },
    "extra": {
        "download-dist": {
            "url": "https://github.com/riasvdv/statamic-linkit/releases/download/{$version}/dist.tar.gz",
            "path": "dist"
        },
        "statamic": {
            "name": "Link It",
            "description": "Link to anything and everything!"
        },
        "laravel": {
            "providers": [
                "Rias\\LinkIt\\ServiceProvider"
            ]
        }
    }
}
